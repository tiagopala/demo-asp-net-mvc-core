@model DemoAspNetMvcCore.Models.Filme

@{ 
    ViewData["Title"] = "Adicionar um filme";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-5">
        <form asp-action="Adicionar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Titulo" class="control-label"></label>
                <input asp-for="@Model.Titulo" class="form-control" />
                <span asp-validation-for="@Model.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DataLancamento" class="control-label"></label>
                <input asp-for="@Model.DataLancamento" class="form-control" />
                <span asp-validation-for="@Model.DataLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Genero" class="control-label"></label>
                <input asp-for="@Model.Genero" class="form-control" />
                <span asp-validation-for="@Model.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Valor" class="control-label"></label>
                <input asp-for="@Model.Valor" class="form-control" />
                <span asp-validation-for="@Model.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Avaliacao" class="control-label"></label>
                <input asp-for="@Model.Avaliacao" class="form-control" />
                <span asp-validation-for="@Model.Avaliacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } 
}